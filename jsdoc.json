{
	"source": {
		"include": ["./"],
		"includePattern": ".js$",
		"excludePattern": "(node_modules/|out/|.github/|bijou.js|bijou_node.js|^_)"
	},
	"opts": {
		"encoding": "utf8",
		"readme": "./README.md",
		"destination": "docs/docs",
		"recurse": true,
		"template": "./node_modules/better-docs"
	},
	"plugins": [
		"plugins/markdown"
	],
	"templates": {
		"search": true,
		"better-docs": {
			"name": "Bijou.js",
			"title": "Bijou.js - Docs",
			"navLinks": [
				{
					"label": "Home",
					"href": "https://bijou.js.org"
				},
				{
					"label": "Github",
					"href": "https://github.com/bijou-js/bijou.js"
				},
				{
					"label": "Functions in Bijou",
					"href": "https://bijou.js.org/docs/"
				}
			]
		}
	}
}
